    function validateCode(ref) {
      var c = ref.toString().toUpperCase().replace(/\s/g, "");
      var l = c.length;
      if (l === 1) {
        return "AML20-00" + c;
      } else if (l === 2) {
        return "AML20-0" + c;
      } else if (l === 3) {
        return "AML20-" + c;
      } else {
        return c;
      }
    }


