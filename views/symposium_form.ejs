  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript">
    function _submitForm() {
      document.getElementById("loader_").style.display = "block";
      var name = $("#name_").val();
      var email = $("#email_").val();
      var institute = $("#institute_").val();
      var professional_status = $("#professional_status_").val();
      var degree = $("#degree_").val();
      var brief_explanation = $("#Brief_explanation_").val();
      var timestamp = new Date().toLocaleString();
      if (email === null || name === null || institute === null || professional_status === null || brief_explanation === null) {
        document.getElementById("loader_").style.display = "none";
        error_show("Please fill all the fields");
      } else {

        if (email.trim() === "" || name.trim() === "" || institute.trim() === "" || professional_status.trim() === "" || brief_explanation.trim() === "") {
          document.getElementById("loader_").style.display = "none";
          error_show("Please fill all the fields");
        } else {
          var jqxhr = $.ajax({
              url: 'https://script.google.com/macros/s/AKfycbyxt2kplbDTTCW5KBSlq4F1_BkCpFt1NXr_df7_7aeWVe8jKF9R/exec',
              method: "GET",
              dataType: "json",
              data: {
                Name: name,
                Institute: institute,
                Professional_Status: professional_status,
                Timestamp: timestamp,
                Email: email,
                Degree: degree,
                Brief_explanation: brief_explanation,
              }
            })
            .then(function(doRef) {
              document.getElementById("loader_").style.display = "none";
              if (doRef["row"] === "Already_Registered") {
                error_show("You have already registered!");
              } else if (doRef["row"] === "Invalid") {
                error_show("Please provide valid Email Id!");
              } else {
                error_show("Your response has been recorded!!");
              }
              $("#name_").val('');
              $("#email_").val('');
              $('#institute_').val('');
              $('#professional_status_').val('');
              $('#degree_').val('');
              $('#Brief_explanation_').val('');
            });
